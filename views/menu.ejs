<!DOCTYPE html>
<html>
<head>
    <title>Menu</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 40px; }
        .menu-item { border: 1px solid #ddd; padding: 15px; margin: 10px 0; }
        .price { color: #8B4513; font-weight: bold; }
    </style>
</head>
<body>
    <a href="/">‚Üê Back</a>
    <h1>Menu</h1>
    
    <% if (branch) { %>
        <h2><%= branch.branch_name %></h2>
        <p><%= branch.address %></p>
    <% } %>
    
    <h3>Products:</h3>
    <% menuItems.forEach(item => { %>
        <div class="menu-item">
            <h4><%= item.product_name %></h4>
            <% if (item.description) { %>
                <p><%= item.description %></p>
            <% } %>
            <% if (item.price) { %>
                <p class="price">$<%= item.price %></p>
            <% } else if (item.current_price) { %>
                <p class="price">$<%= item.current_price %></p>
            <% } else if (item.product_price) { %>
                <p class="price">$<%= item.product_price %></p>
            <% } %>
        </div>
    <% }); %>
</body>
</html>
