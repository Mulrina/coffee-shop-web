<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a class="navbar-brand" href="/">☕ Coffee House</a>
        </div>
    </nav>
    
    <main class="container main-content">
        <div class="menu-header">
            <h1>Menu</h1>
            <p class="menu-subtitle">organic • low sugar • mindful ingredients</p>
        </div>

        <div class="menu-grid">
            <% menuItems.forEach(function(item) { %>
            <div class="menu-item">
                <div class="menu-item-content">
                    <div class="menu-item-info">
                        <h3><%= item.product_name %></h3>
                        <p><%= item.description %></p>
                        <div class="menu-item-category"><%= item.category_name %></div>
                    </div>
                    <     lass="menu-item-price">
                        <span class="price"><%= item.current_price %> ₽</span>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        
        <div style="text-align: center; margin-top: 2rem;">
            <a href="/" class="btn">Back to Main</a>
        </div>
    </main>
    
    <footer>
        <div class="container">
            <p>Coffee House 2024</p>
        </div>
    </footer>
</body>
</html>
